function obtenerMensaje(exito) {
    return new Promise((resolve, reject) => {
        if (exito) {
            resolve("🎉 ¡Mensaje exitoso!");
        } else {
            reject("❌ Ocurrió un error...");
        }
    });
}

async function mostrarMensaje() {
    try {
        console.log("Intentando obtener el mensaje...");
        let mensaje = await obtenerMensaje(true); // Cambia a false para probar el error
        console.log(mensaje);
    } catch (error) {
        console.log(error);
    }
    console.log("Proceso finalizado");
}

// Llamamos a la función
mostrarMensaje();







let promesa1 = new Promise(resolve => {
    setTimeout(() => resolve("Promesa 1 resuelta"), 1000);
  });
  
  let promesa2 = new Promise(resolve => {
    setTimeout(() => resolve("Promesa 2 resuelta"), 2000);
  });
  


  Promise.all([promesa1, promesa2])
    .then(resultados => {
      console.log(resultados); // ["Promesa 1 resuelta", "Promesa 2 resuelta"]
    })
    .catch(error => {
      console.log(error);
    });
  



















function obtenerMensaje(exito) {
    new Promise((resolve, reject) => { // ❌ FALTA EL RETURN
        if (exito) {
            resolve("🎉 ¡Mensaje exitoso!");
        } else {
            reject("❌ Ocurrió un error...");
        }
    });
}

async function mostrarMensaje() {
    try {
        console.log("Intentando obtener el mensaje...");
        let mensaje = await obtenerMensaje(true); // ⛔ PROBLEMA AQUÍ
        console.log(mensaje);
    } catch (error) {
        console.log(error);
    }
    console.log("Proceso finalizado");
}

mostrarMensaje();















// Funciones que devuelven promesas con async/await
async function promesa1() {
    return new Promise(resolve => {
      setTimeout(() => resolve("Promesa 1 resuelta"), 1000);
    });
  }
  
  async function promesa2() {
    return new Promise(resolve => {
      setTimeout(() => resolve("Promesa 2 resuelta"), 2000);
    });
  }
  
  async function ejecutar() {
    try {
      let resultados = await Promise.all([promesa1(), promesa2()]);
      console.log(resultados); // ["Promesa 1 resuelta", "Promesa 2 resuelta"]
    } catch (error) {
      console.log(error);
    }
  }
  
  ejecutar();
  












